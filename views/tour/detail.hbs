{{>header}}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            {{__ "Home"}}
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="/tour/tour-more" class="stext-109 cl8 hov-cl1 trans-04">
            {{__ "All Tour"}}
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            {{proDetail.title}}
        </span>
    </div>
</div>

<!-- Tour Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        {{#proDetail}}
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="slick3 gallery-lb">
                            <div class="item-slick3" data-thumb="../../images/{{this._doc.imagePath}}">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="../../images/{{this._doc.imagePath}}" alt="IMG-TOUR">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                        href="../../images/{{this._doc.imagePath}}">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        <i class="zmdi zmdi-flight-land"></i> {{this._doc.title}}
                    </h4>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p class="stext-102 cl5 p-t-23"><i class="zmdi zmdi-flight-takeoff"></i>
                                {{__ "Place of Departure"}}: <span
                                    class="mtext-106 cl2">{{this._doc.depart.name}}</span>
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <p class="stext-102 cl5 p-t-23"><i class="zmdi zmdi-airline-seat-recline-extra"></i>
                                {{__ "Seat Available"}}: <span class="mtext-106 cl2">{{this._doc.seat}}</span>
                            </p>
                            <p class="stext-102 cl5 p-t-23"><i class="zmdi zmdi-money-box"></i>
                                {{__ "Price"}}: <span class="mtext-106 cl2">$ {{this._doc.price}}</span>
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <p class="stext-102 cl5 p-t-23"><i class="zmdi zmdi-calendar"></i>
                                {{__ "Date"}}: <span class="mtext-106 cl2"
                                    id="dateFormat">{{moment this._doc.date format="YYYY-MM-DD"}}</span>
                            </p>
                            <p class="stext-102 cl5 p-t-23"><i class="zmdi zmdi-time"></i>
                                {{__ "Duration"}}: <span class="mtext-106 cl2">{{this._doc.duration}} days</span>
                            </p>
                        </div>
                    </div>
                    <hr>
                    <!--  -->
                    <div class="p-t-20">
                        <form action="/cart/add-to-cart/{{this._doc._id}}" method="post">
                            <div class="flex-w flex-r-m p-b-10 form-group">
                                <div class="size-203 respon6">
                                    {{{__ "Adult"}}}:
                                </div>
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>
                                        <input class="mtext-104 cl5 txt-center num-product form-control mt-2"
                                            type="number" id="num" name="num" value="1" min="1" max="10">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="flex-w p-b-10 form-group">
                                <div class="respon6">
                                    {{{__ "Children (From 2 to under 12 years old)"}}}:
                                </div>
                                <div class="flex-w flex-m respon6-next ml-2">
                                    <input type="checkbox" id="myCheck" onclick="myFunction()">
                                </div>
                                <div class="size-204 respon6" id="text" style="display:none">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl5 txt-center num-product form-control mt-2"
                                            type="number" id="numChil" name="numChil" value="0" min="0" max="10">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w p-b-10 form-group">
                                <div class="respon6">
                                    {{{__ "Kid (Under 2 years old)"}}}:
                                </div>
                                <div class="flex-w flex-m respon6-next ml-2">
                                    <input type="checkbox" id="myCheck1" onclick="myFunction()">
                                </div>
                                <div class="size-204 respon6" id="text1" style="display:none">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl5 txt-center num-product form-control mt-2"
                                            type="number" id="numKid" name="numKid" value="0" min="0" max="10">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{!-- js-addcart-detail --}}
                            <button type="submit" class="cl0 size-101 bg1 bor1 hov-btn1 trans-04">
                                <i class="zmdi zmdi-check"></i> {{__ "Book this tour"}}
                            </button>
                            {{!-- Free web call --}}
                            <a
                                onclick="window.open('https://webcall.me/duminhtat98@gmail.com', '_blank', 'location=yes,height=570,width=520,scrollbars=yes,status=yes');"><button
                                    type="button" class="cl0 size-101 btn-success bor1 hov-btn1 trans-04">
                                    <i class="zmdi zmdi-phone"></i> {{__ "Free web call"}}
                                </button></a>
                        </form>
                    </div>

                    <!--  -->

                </div>
            </div>
        </div>

        {{/proDetail}}
        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description"
                            role="tab">{{__ "Description"}}</a>
                    </li>
                    <li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#reviews" role="tab">{{__ "Reviews"}}
                            ({{reviewLength}})</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-43">
                    <!-- - -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        {{#proDetail}}
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>
                                        <button onclick="printPDF()" class="btn bg1 bor1 cl0 py-3 px-4">
                                            <i class="zmdi zmdi-print"></i> Print this tour
                                        </button>
                                    </p>
                                </div>
                                <div id="tour-schedule">
                                    <div class="col-md-12 mt-3">
                                        <div class="mb-3">
                                            {{{this._doc.description}}}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <table class="table mt-4">
                                        <tbody>
                                            <tr>
                                                <th scope="row">Departure</th>
                                                <td>
                                                    <p>{{this._doc.depart.name}}</p>
                                                </td>
                                                <td />
                                            </tr>
                                            <tr>
                                                <th scope="row">Departure Time</th>
                                                <td>
                                                    <p id="dateFormat">
                                                        {{moment this._doc.date format="YYYY-MM-DD"}}
                                                    </p>
                                                </td>
                                                <td />
                                            </tr>
                                            <tr>
                                                <th scope="row">Return Time</th>
                                                <td>
                                                    <p>Approximately 8:30 PM</p>
                                                </td>
                                                <td />
                                            </tr>
                                            <tr>
                                                <th scope="row">Included</th>
                                                <td class="d-flex">
                                                    <ul>
                                                        <li>Tour Guide: {{this._doc.tourGuide}}</li>
                                                        <li>Hotel: {{this._doc.hotel}} Star</li>
                                                    </ul>
                                                </td>
                                                <td />
                                            </tr>
                                            <tr>
                                                <th scope="row">Not Included</th>
                                                <td class="d-flex">
                                                    <ul>
                                                        <li>Departure Taxes</li>
                                                        <li>Entry Fees</li>
                                                    </ul>
                                                </td>
                                                <td />
                                            </tr>
                                            <tr>
                                                <th scope="row">Maps</th>
                                                <td>
                                                    <iframe
                                                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.553248913952!2d106.69452331474895!3d10.76887289232666!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f3e359b24fb%3A0x43d46a3b0fd5aef4!2zMSBZZXJzaW4sIFBoxrDhu51uZyBOZ3V54buFbiBUaMOhaSBCw6xuaCwgUXXhuq1uIDEsIEjhu5MgQ2jDrSBNaW5oLCBWaWV0bmFt!5e0!3m2!1sen!2s!4v1569049441465!5m2!1sen!2s"
                                                        width="820" height="500" frameborder="0" style="border:1px;"
                                                        allowfullscreen=""></iframe>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        {{/proDetail}}
                    </div>
                    <!-- - -->
                    <div class="tab-pane fade" id="reviews" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                                <div class="p-b-30 m-lr-15-sm">
                                    {{#proDetail}}
                                    <div class="flex-w flex-t p-b-68">
                                        <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                                            <img src="../../images/{{this._doc.imagePath}}" alt="AVATAR">
                                        </div>
                                        <div class="size-207">
                                            <div class="flex-w flex-sb-m p-b-17">
                                                <span class="mtext-107 cl2 p-r-20">
                                                    <h2>{{this._doc.title}}</h2>
                                                </span>
                                                <span id="ratingStar" class="fs-18 cl11">
                                                    <h2>{{this._doc.tourRate}} <i class="zmdi zmdi-star"></i></h2>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    </br>
                                    <!-- Review -->
                                    {{#each this._doc.reviews}}
                                    <div class="flex-w flex-t p-b-68">
                                        <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                                            <img src="../../images/avatar-01.jpg" alt="AVATAR">
                                        </div>

                                        <div class="size-207">
                                            <div class="flex-w flex-sb-m p-b-17">
                                                <span class="mtext-107 cl2 p-r-20">
                                                    {{this.userName}} ({{this.date_time}})
                                                </span>

                                                <span id="ratingStar" class="fs-18 cl11">
                                                    {{this.rating}}
                                                    <i class="zmdi zmdi-star"></i>
                                                </span>
                                            </div>

                                            <p class="stext-102 cl6">
                                                {{this.description}}
                                            </p>
                                        </div>
                                    </div>
                                    {{/each}}
                                    {{/proDetail}}
                                    <!-- Add review -->
                                    {{# if checkAcc}}
                                    <form class="w-full" action="/tour/review-tour/{{proDetail._doc._id}}"
                                        method="post">
                                        <h5 class="mtext-108 cl2 p-b-7">
                                            Add a review - {{msg}}
                                        </h5>

                                        <p class="stext-102 cl6">
                                            Your email address will not be published. Required fields are marked *
                                        </p>

                                        <div class="flex-w flex-m p-t-50 p-b-23">
                                            <span class="stext-102 cl5 m-r-16">
                                                Your Rating
                                            </span>

                                            <span class="wrap-rating fs-18 cl11 pointer">
                                                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                <input class="dis-none" type="number" name="rating">
                                            </span>
                                        </div>

                                        <div class="row p-b-25">
                                            <div class="col-12 p-b-5">
                                                <label class="stext-102 cl5" for="review">Your review</label>
                                                <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10"
                                                    id="review" name="review" required></textarea>
                                            </div>
                                        </div>

                                        <button
                                            class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
                                            Submit
                                        </button>
                                    </form>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{!-- {{/proDetail}} --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Related Tour -->
<section class="sec-relate-product bg0 p-t-45 p-b-105">
    <div class="container">
        <div class="p-b-45">
            <h3 class="ltext-106 cl5 txt-center">
                {{__ "Related Tours"}}
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">
                {{# each proRelated}}
                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="../../images/{{this._doc.imagePath}}" alt="IMG-TOUR">

                            <a href="/tour/detail/{{this._doc._id}}"
                                class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="/tour/detail/{{this._doc._id}}"
                                    class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    {{this._doc.title}}
                                </a>
                                <span class="stext-105 cl1">
                                    $ {{this._doc.price}}
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04"
                                        src="../../images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l"
                                        src="../../images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>


{{>footer}}
<script src="/javascripts/printPDF.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

<script>
    if (`{{{ sessionFlash.message }}}`) {
        Swal.fire({
            icon: 'warning',
            title: `{{{ sessionFlash.message }}}`
        })
    }
</script>