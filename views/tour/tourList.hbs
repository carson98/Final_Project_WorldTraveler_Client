{{>header}}

<!-- Tour -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">
                {{__ "Tour Overview"}}
            </h3>
        </div>

        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    {{__ "All Tours"}}
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".true">
                    {{__ "Domestic"}}
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".false">
                    {{__ "International"}}
                </button>

            </div>

            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    {{__ "Search"}}
                </div>
            </div>

            <!-- Search tour -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <form action="/tour/tour-search" method="post">
                    <div class="bor8 dis-flex p-l-15">
                        <button type="submit" class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>
                        <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" id="search" name="search"
                            placeholder="Search">
                    </div>
                </form>
            </div>
        </div>
        {{# each tours}}
        <div class="row isotope-grid">
            {{# each this}}
            <div class="col-sm-6 col-md-4 col-lg-4 p-b-35 isotope-item {{this._doc.category}}">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        <img src="../images/{{this._doc.imagePath}}" alt="IMG-TOUR">
                        {{!-- js-show-modal1 into class --}}
                        <a href="/tour/detail/{{this._doc._id}}"
                            class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                            {{__ "Quick View"}}
                        </a>
                    </div>

                    <div class="block2-txt flex-w flex-t p-t-14">
                        <h4 class="price">
                            <span>
                                $ {{this._doc.price}}
                            </span>
                        </h4>
                        <div class="block2-txt-child1 flex-col-l">
                            <a href="/tour/detail/{{this._doc._id}}"
                                class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                <h5><i class="zmdi zmdi-flight-land"></i> {{this._doc.title}}</h5>
                            </a>
                        </div>

                        <div class="block2-txt-child2 flex-r p-t-3">
                            <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                <img class="icon-heart1 dis-block trans-04" src="../images/icons/icon-heart-01.png"
                                    alt="ICON">
                                <img class="icon-heart2 dis-block trans-04 ab-t-l"
                                    src="../images/icons/icon-heart-02.png" alt="ICON">
                            </a>
                        </div>
                        <div class="tgc-line"></div>
                        <div class="content">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <p class="p-1" style="white-space:nowrap"><i class="zmdi zmdi-flight-takeoff"></i> Depart:
                                        <strong>{{this._doc.depart.name}}</strong>
                                    </p>
                                    <p class="p-1"><i class="zmdi zmdi-calendar"></i> Date:
                                        <strong id="dateFormat">{{moment this._doc.date format="YYYY-MM-DD"}}</strong></p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <p class="p-1"><i class="zmdi zmdi-airline-seat-recline-extra"></i> Seat
                                        Available:
                                        <strong>{{this._doc.seat}}</strong></p>
                                    <p class="p-1" style="white-space:nowrap"><i class="zmdi zmdi-time"></i> Durations:
                                        <strong>{{this._doc.duration}} days</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
        <!-- Load more -->
        {{#if hidenMore}}
        {{else}}
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="/tour/tour-more" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                {{__ "Load More"}}
            </a>
        </div>
        {{/if}}
    </div>
</section>

{{>footer}}