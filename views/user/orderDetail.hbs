{{>header}}
<div class="container" style="padding-top:20px; padding-bottom:30px">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="card bg-light">
                        <div class="card-header card-header-danger">
                            <h4 class="card-title font-weight-bold">Order Detail</h4>
                            <p class="card-category">View all information in Order</p>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Order Date:</label>
                                        {{orderDetail._doc.orderDate}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 row">
                                <div class="form-group">
                                    <label class="bmd-label-floating font-weight-bold">Product detail in order:</label>
                                </div>
                            </div>
                            {{#each orderDetail._doc.orderList}}
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Product Name: {{this._doc.proName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Size: {{this._doc.Size}}</label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Quantity: {{this._doc.totalQuantity}}</label>

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Total price: ${{this._doc.totalPrice}}</label>

                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Customer Name:</label>
                                        {{orderDetail._doc.userInfo.name}}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Email:</label>

                                        {{orderDetail._doc.userInfo.email}}

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Phone Number:</label>

                                        {{orderDetail._doc.userInfo.phoneNum}}

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Discount:
                                            {{orderDetail._doc.couponCode.description}}</label>

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Adress Shipping:</label>
                                        {{orderDetail._doc.userInfo.address}},{{orderDetail._doc.userInfo.district}},
                                        {{orderDetail._doc.userInfo.city}},{{orderDetail._doc.userInfo.country}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Status Shipping:</label>
                                        {{orderDetail._doc.statusShip}}
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating font-weight-bold">Total Price: </label>
                                        <p class="class=bmd-label-floating font-weight-bold">
                                            ${{orderDetail._doc.totalPrice}}
                                        </p>


                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    {{!-- data-toggle="modal" data-target="#modelId" --}}
                                    <form action="/user/deleteOrder" method="POST">
                                        {{!-- <input type="text" class="form-control" name="numberOrder" id="numberOrder"
                                            value="{{orderDetail.number}}" hidden="false"> --}}
                                        {{!-- <input type="text" class="form-control" name="arrPro" id="arrPro"
                                            value="{{#each arr_proId}}{{this}}-{{/each}}" hidden="false"> --}}
                                        <input type="text" class="form-control" name="arrPro" id="arrPro"
                                            value="{{arr_proDelet}}" hidden="false">
                                        <button type="submit" class="btn btn-danger pull-right">Delete</button>
                                    </form>

                                    <a name="" id="" class="btn btn-secondary pull-right" style="margin-right:10px;"
                                        href="/user/profile" role="button">Back to
                                        Profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
</div>
{{>footer}}


<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Body
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>